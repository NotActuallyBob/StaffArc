<Window x:Class="StaffArcApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaffArcApp.Views"
        mc:Ignorable="d"
        Title="StaffArc" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:OverviewView Grid.Row="0"></local:OverviewView>

        <TextBlock Grid.Row="1" Text="{Binding Path=FooterText}"></TextBlock>
    </Grid>
</Window>
